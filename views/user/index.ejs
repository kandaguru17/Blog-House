<%include ../partials/header %>


<% users.forEach(function(user){ %>

<div class="container">
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<div class="well profile well-profile">
	<div class="row">
